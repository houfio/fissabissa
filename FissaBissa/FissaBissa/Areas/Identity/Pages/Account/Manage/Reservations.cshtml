@page
@model ReservationsModel
@{
    ViewData["Title"] = "Reservations";
    ViewData["ActivePage"] = ManageNavPages.Reservations;
    var reservations = ViewData["Reservations"] as ICollection<FissaBissa.Entities.ReservationEntity>;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        @foreach (var reservation in reservations)
        {
            var date = reservation.Date.ToLongDateString();

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        @Html.DisplayFor(model => date)
                    </h5>
                    <p class="card-text">
                        Price: &euro;@Html.DisplayFor(model => reservation.Price)
                    </p>
                    <a asp-controller="Reservations" asp-action="Details" asp-route-id="@reservation.Id" class="card-link">Details</a>
                </div>
            </div>
        }
    </div>
</div>
